alias: "Media player idle"
trigger:
  - platform: state
    entity_id: media_player.vardagsrum
    from: 'Playing'
    to: 'idle'
condition:
  - condition: state
    entity_id: sun.sun
    state: 'below_horizon'
action:
    service: switch.turn_off
    entities:
      - switch.buttkickers
      - switch.subwoofer
     service: switch.turn_on
     entities:
       - switch.tv_bench
     service.cover.open
     entities:
       - cover.livingroom_curtains